<%-
  param_options = scope.function_hiera_hash(["varnish::config::parameters", {}]).collect { |k,v|
    "-p #{Shellwords.escape(k)}=#{Shellwords.escape(v)}"
  }

  runtime_options = scope.function_hiera_array(["varnish::config::runtime_options", []])
  runtime_options = runtime_options.collect { |line|
    # skip over invalid options
    next unless line.strip =~ /^-[a-z]/i

    option, setting = line.split(/\s+/, 2)
    if setting.include? '='
      key, value = setting.split(/\s*=\s*/, )
      "#{option} #{Shellwords.escape(key)}=#{Shellwords.escape(value)}"
    else
      "#{option} #{Shellwords.escape(setting)}"
    end
  }.compact

  daemon_options = runtime_options.concat(param_options)
-%>
###
